<%= form_for @article do |f|  %>
  <% if @article.errors.any? %>
    <div id="error_msg">
      <h3>
        <%= pluralize(@article.errors.count, 'error') %> prohibited from processing the request
      </h3>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %> <br />
    <%= f.text_field :title %> <br />
  </p>

  <p>
    <%= f.label :text %> <br />
    <%= f.text_field :text %> <br />
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

